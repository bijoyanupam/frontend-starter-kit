/**
 * This config is based on JavaScript Standard Style.
 * https://standardjs.com/
 * https://github.com/standard/eslint-config-standard
 */
{
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-irregular-whitespace": [
      "error",
      {
        "skipComments": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "valid-jsdoc": [
      "error"
    ],
    "no-console": [
      "warn"
    ]
  }
}
